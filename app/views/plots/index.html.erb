<h1>Plots</h1>

<% @plots.each do |plot| %>
  <div id="plot-plants-<%= plot.id %>">
    <p>Plot Number: <%= plot.number %></p>
    <% plot.plants.each do |plant| %>
      <div>
        <%= plant.name %>
        <%= button_to "Remove", remove_plant_from_plot_path(plot_id: plot.id, id: plant.id), method: :delete %>
      </div>
    <% end %>
  </div>
<% end %>